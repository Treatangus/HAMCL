<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_base">
    <!--android:background="#FF000000"-->

    <TextureView
        android:id="@+id/main_surface"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_height="16dp"
        android:layout_width="16dp"
        android:src="@drawable/cursor"
        android:id="@+id/mouse_cursor"/>

    <com.mojang.minecraftpe.TextInputProxyEditTextbox
        android:textSize="20sp"
        android:id="@+id/text_box"
        android:layout_width="54dp"
        android:layout_height="27dp"
        android:singleLine="true"
        android:inputType="text"
        android:text=""
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:visibility="gone"
        android:background="@drawable/control_button"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/mouse_primary"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:text="@string/mouse_primary"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="122dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/mouse_secondary"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:text="@string/mouse_secondary"
        android:layout_marginLeft="108dp"
        android:layout_marginBottom="122dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:textSize="32sp"
        android:id="@+id/control_down"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginBottom="14dp"
        android:text="@string/control_down"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/control_lshift"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="14dp"
        android:text="@string/control_shift"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/control_inventory"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="108dp"
        android:layout_marginBottom="14dp"
        android:text="@string/control_inventory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:textSize="32sp"
        android:id="@+id/control_up"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginBottom="122dp"
        android:text="@string/control_up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:textSize="32sp"
        android:id="@+id/control_left"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="68dp"
        android:text="@string/control_left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:textSize="32sp"
        android:id="@+id/control_right"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="108dp"
        android:layout_marginBottom="68dp"
        android:text="@string/control_right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:textSize="32sp"
        android:id="@+id/control_jump"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="68dp"
        android:text="@string/control_jump"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:id="@+id/item_bar"
        android:visibility="invisible"
        android:weightSum="9.0">

        <Button
            android:textSize="20sp"
            android:id="@+id/control_1"
            android:background="@drawable/control_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

        <Button
            android:textSize="20sp"
            android:id="@+id/control_2"
            android:background="@drawable/control_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

        <Button
            android:textSize="20sp"
            android:id="@+id/control_3"
            android:background="@drawable/control_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

        <Button
            android:textSize="20sp"
            android:id="@+id/control_4"
            android:background="@drawable/control_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

        <Button
            android:textSize="20sp"
            android:id="@+id/control_5"
            android:background="@drawable/control_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

        <Button
            android:textSize="20sp"
            android:id="@+id/control_6"
            android:background="@drawable/control_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

        <Button
            android:textSize="20sp"
            android:id="@+id/control_7"
            android:background="@drawable/control_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

        <Button
            android:textSize="20sp"
            android:id="@+id/control_8"
            android:background="@drawable/control_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

        <Button
            android:textSize="20sp"
            android:id="@+id/control_9"
            android:background="@drawable/control_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

    </LinearLayout>

    <Button
        android:textSize="20sp"
        android:id="@+id/esc"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/esc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/control_command"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="0dp"
        android:text="@string/control_command"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/control_debug"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="0dp"
        android:text="@string/control_debug"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/control_3rd"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="0dp"
        android:text="@string/control_thirdperson"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/show_ime"
        android:background="@drawable/control_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="0dp"
        android:text="@string/control_ime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>

